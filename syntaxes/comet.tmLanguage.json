{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Comet",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#functions"
    },
    {
      "include": "#storage-types"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#commands"
    },
    {
      "include": "#macros"
    },
    {
      "include": "#variables"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.comet",
          "match": "#.*$"
        }
      ]
    },
    "strings": {
      "name": "string.quoted.double.comet",
      "begin": "\"",
      "end": "\"",
      "patterns": [
        {
          "name": "constant.character.escape.comet",
          "match": "\\\\."
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.language.boolean.comet",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "variable.language.special.comet",
          "match": "\\b(__namespace__|__main__)\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.comet",
          "match": "\\b(if|else|while|break|return|import)\\b"
        },
        {
          "name": "keyword.operator.logical.comet",
          "match": "\\b(and|or)\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "support.function.builtin.comet",
          "match": "\\b(print|random|type|round|get_score|set_score|get_data|set_data|append|del|len|is_module|divide|multiply|int|float|double|bool|string)\\b(?=\\()"
        },
        {
          "name": "entity.name.function.comet",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)(?=\\()"
        },
        {
          "name": "keyword.declaration.function.comet",
          "match": "\\bdef\\b"
        }
      ]
    },
    "storage-types": {
      "patterns": [
        {
          "name": "storage.type.var.comet",
          "match": "\\bvar\\b"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.comet",
          "match": "\\b\\d+\\.\\d+f\\b|\\b\\d+f\\b"
        },
        {
          "name": "constant.numeric.double.comet",
          "match": "\\b\\d+\\.\\d+d?\\b|\\b\\d+d\\b"
        },
        {
          "name": "constant.numeric.integer.comet",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.arithmetic.comet",
          "match": "\\+|\\-|\\*|/|%"
        },
        {
          "name": "keyword.operator.comparison.comet",
          "match": "==|!=|<=|>=|<|>"
        },
        {
          "name": "keyword.operator.assignment.comet",
          "match": "="
        },
        {
          "name": "keyword.operator.logical.comet",
          "match": "!"
        }
      ]
    },
    "commands": {
      "patterns": [
        {
          "name": "meta.command.comet",
          "match": "^\\s*/(?![\\*$]).*$",
          "captures": {
            "0": {
              "name": "string.unquoted.command.comet"
            }
          }
        }
      ]
    },
    "macros": {
      "patterns": [
        {
          "name": "meta.macro-command.comet",
          "match": "^\\s*/\\$.*$",
          "captures": {
            "0": {
              "name": "string.unquoted.macro.comet"
            }
          }
        },
        {
          "name": "variable.other.macro.comet",
          "match": "\\$\\([a-zA-Z_][a-zA-Z0-9_]*\\)"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.comet",
          "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
        }
      ]
    }
  },
  "scopeName": "source.planet"
}